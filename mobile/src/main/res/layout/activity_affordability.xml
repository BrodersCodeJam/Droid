<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_sbg_joburgblur"
    tools:context="za.co.standardbank.broders.AffordabilityActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView2"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Total Income"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/income_text_view"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="6500" />

        <TextView
            android:id="@+id/textView5"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/income_text_view"
            android:text="Interest Rate %"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/rate_text_view"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="9" />

        <TextView
            android:id="@+id/textView6"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rate_text_view"
            android:text="Term (Months)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/term_text_view"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:ems="10"
            android:inputType="number"
            android:text="36" />

        <TextView
            android:id="@+id/textView7"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/term_text_view"
            android:text="Potential Loan Amount"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/potential_text_view"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView3"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/potential_text_view"
            android:paddingTop="16dp"
            android:text="Required Loan Amount"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/required_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Unavailiable"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:layout_marginTop="16dp"
            android:id="@+id/button"
            android:onClick="appleGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/required_text_view"
            android:background="@android:color/holo_green_light"
            android:text="Apply"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <Button
            android:layout_marginTop="16dp"
            android:id="@+id/lotto"
            android:onClick="playLotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_below="@id/required_text_view"
            android:background="@android:color/holo_red_light"
            android:text="Not Enough Cash? Play Lotto"
            android:textColor="@android:color/white" />

</RelativeLayout>

</ScrollView>
